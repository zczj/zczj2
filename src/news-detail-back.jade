                                                                            "<img class=\"reg-num\" src=\"/news2016/VerifyImageReply\" id=\"VerifyImage_" + data.entity.CommentID + "\" title=\"看不清？点击换一个\" onclick=\"javascript:document.getElementById('VerifyImage_" + data.entity.CommentID + "').src='/news2016/VerifyImageReply?r='+Math.random();return false;\" >" +
                                                                            "</div></div></div></div>";

                                                                        $(".comment_new .com_list").prepend(dataStr);
                                                                        BindFace();
                                                                    } else {
                                                                        var dataStr = "<li><span class=\"com_user\">@" + data.entity.NickName + "</span>: " + replace_em(data.entity.Content) + "<span class=\"replyDate\">" + PostDate + "</span></li>";
