                                                        layer.alert("请登录后再评论。"); return;
                                                    }
                                                    var Currentbtn = $(this);
                                                    var content = Currentbtn.parent(".comment_post_btn").prev(".input");
                                                    var contentVal = $.trim(content.val());
                                                    if (contentVal.length < 1) {
                                                        layer.alert("内容不能为空。");
                                                        return;
                                                    }
                                                    var newid = $("#newid").val();
                                                    var parentid = parseInt(content.data("parent"));
                                                    var comm = parseInt(content.data("comm"));
                                                    var Code = $.trim(Currentbtn.next("input[type='text']").val());
                                                    if (Code.length == 0) {
                                                        layer.alert("请输入验证码。");
                                                        return;
                                                    }
                                                    var Type = "Comment";
                                                    if (parentid > 0) {
                                                        Type = "Reply";
                                                    }
                                                    $.post("/news2016/Validate", { Code: Code, Type: Type }, function (data) {
                                                        if (data.ResultMsg != "Success") {
                                                            layer.alert(data.ResultMsg);
                                                            Currentbtn.next("input[type='text']").val("");
                                                            Currentbtn.next().next("img").trigger("click");
                                                            return;
                                                        } else {
                                                            $.post("/api/ChangYanData", { newsid: newid, Content: contentVal, ParentID: parentid }, function (data) {
                                                                if (data.ErrMsg != undefined) {
                                                                    layer.alert(data.ErrMsg);
                                                                } else {
                                                                    var da = new Date(parseInt(data.entity.PostDate.replace("/Date(", "").replace(")/", "").split("+")[0]));
                                                                    var Months = (da.getMonth() + 1); if (Months < 10) { Months = "0" + Months }
                                                                    var Days = da.getDate(); if (Days < 10) { Days = "0" + Days }
                                                                    var Hours = da.getHours(); if (Hours < 10) { Hours = "0" + Hours }
                                                                    var Minutes = da.getMinutes(); if (Minutes < 10) { Minutes = "0" + Minutes }
                                                                    var PostDate = Months + '月' + Days + "日 " + Hours + ":" + Minutes;
                                                                    if (comm == 0) {
                                                                        var dataStr = "<div class=\"com_li\"><span class=\"author\"><img src=\"" + data.entity.Avatar + "\" onerror=\"nofind(this)\" alt=\"\" /></span>" +
                                                                        "<p class=\"com_title\"><span class=\"com_user\">" + data.entity.NickName + "</span>：" + replace_em(data.entity.Content) + " </p>" +
                                                                        "<ul class=\"com_replay_list\"></ul>" +
                                                                        "<p class=\"com_tools\"><span class=\"com_zan\"><span class=\"com_jb\"  data-commid=\"" + data.entity.CommentID + "\" >举报</span><span class=\"zan\" data-commid=\"" + data.entity.CommentID + "\"><i class=\"icon icon_com_zan\"></i>（" + data.entity.Sp + "）</span>|<span class=\"comment_replay\">评论</span></span><span class=\"com_data\">" + PostDate + "</span></p>" +
