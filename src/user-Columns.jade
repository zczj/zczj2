extends Shade/layout
block content
    link(rel="stylesheet", href="skin/css/zixun.min.css")
    link(rel="stylesheet", href="skin/css/user.min.css")
    .page_warp
        .container.mt40.cf
            //右侧
            .user_side.l
                include Shade/user_side.jade
            //左侧
            .user_main.r
                .collect_tab.btn_tab
                    a(href="#").cur 文章列表
                    a(href="#") 发布文章
                .collect_box.box_tab.collect_articl(style="display:block;")
                    .articl_select_box
                        .select_bar
                            .l 文章类型：
                                select.txt
                                    option(value="0") 全部
                                    option(value="1") 草稿
                                    option(value="2") 审核中
                                    option(value="3") 审核成功
                                    option(value="4") 审核失败
                            .r
                                span 时间：
                                input.txt(type="text",onFocus="WdatePicker()")
                                |至
                                input.txt(type="text",onFocus="WdatePicker()")
                                a.btn.btn_sure 确定
                                a.btn 清除筛选
                        table.articl_list
                            tr
                                th(width="300") 文章标题
                                th 状态
                                th 发表时间
                                th 操作
                            tr
                                td
                                    a(href="#").title 别让国足的"虽败犹荣"大标题蒙蔽双眼…
                                td
                                    span.f_green 审核成功
                                td 2016-09-02  11:17
                                td
                                    a(href="#").btn    修改
                            tr
                                td
                                    a(href="#").title 别让国足的"虽败犹荣"大标题蒙蔽双眼…
                                td
                                    span.f_red 审核失败
                                td 2016-09-02  11:17
                                td
                                    a(href="#").btn    修改
                             tr
                                td
                                    a(href="#").title 别让国足的"虽败犹荣"大标题蒙蔽双眼…
                                td
                                    span.f_blue 审核中
                                td 2016-09-02  11:17
                                td
                                    a(href="#").btn    修改
                            tr
                                td
                                    a(href="#").title 别让国足的"虽败犹荣"大标题蒙蔽双眼…
                                td
                                    span.f_green 已发布
                                td 2016-09-02  11:17
                                td
                                    a(href="#").btn    修改
                            tr
                                td
                                    a(href="#").title 别让国足的"虽败犹荣"大标题蒙蔽双眼…
                                td
                                    span.f_red 草稿
                                td 2016-09-02  11:17
